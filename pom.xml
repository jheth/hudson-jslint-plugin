  <groupId>hudson.plugins.jslint</groupId>
  <artifactId>jslint</artifactId>
  <version>1.1</version>
  <packaging>hpi</packaging>
  <name>JSLint Plug-in</name>
  <url>http://wiki.hudson-ci.org/display/HUDSON/JSLint+Plugin</url>
  <description>This plug-in generates the trend report for JSLint, a
